# Токен вашего Telegram бота (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# Ваш ID в Telegram (можно получить у @userinfobot)
ADMIN_ID=your_telegram_id_here

# Настройки для Avito API (если будете использовать официальное API)
AVITO_CLIENT_ID=your_avito_client_id_here
AVITO_CLIENT_SECRET=your_avito_client_secret_here

# Настройки базы данных (пока используем SQLite)
DATABASE_URL=sqlite:///bot.db

# Настройки для Redis (для кэширования, опционально)
REDIS_URL=redis://localhost:6379/0

# Режим отладки (True/False)
DEBUG=True
